<!DOCTYPE html>
    <head>
      <div class="sticky-top">
        <div class="w3-bar w3-amber w3-card w3-left-align w3-large">
          <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-black" href="javascript:void(0);" onclick="navClick()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
          <a href="/memehub" class="w3-bar-item w3-button w3-padding-large w3-white w3-hover-black">MEMEHUB</a>
          <a href="/memehub/meme/" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-black">MEME</a>
          <a href="/memehub/meme/add" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-black">ADD MEME</a>
          <div class="w3-dropdown-hover w3-hide-small" style="float:right">
            <% if(!currentUser) { %>
              <a href="/memehub/login" class="w3-padding-large w3-button w3-hover-white">LOG IN</a>  
            <% } else { %>
              <a class="w3-padding-large w3-button w3-amber w3-hover-white w3-black" href="/memehub/profile"><%= currentUser.username %><i class="fa fa-caret-down"></i></a>
              <div class="w3-dropdown-content w3-bar-block w3-card-4">
                <a href="/memehub/logout" class="w3-bar-item w3-button w3-hover-black">LOG OUT</a>
              </div>
            <% } %>
          </div>
        </div>
        <div id="navDemo" class="w3-bar-block w3-amber w3-hide w3-hide-large w3-hide-medium w3-large">
          <% if(!currentUser) { %>
          <a href="/memehub/login" class="w3-bar-item w3-button w3-padding-large">LOG IN</a>
          <% } else { %>
          <a href="/memehub/profile" class="w3-bar-item w3-black w3-button w3-padding-large w3-hover-white"><%= currentUser.username %></a>
          <a href="/memehub/meme/" class="w3-bar-item w3-button w3-padding-large w3-hover-white">MEME</a>
          <a href="/memehub/meme/add" class="w3-bar-item w3-button w3-padding-large w3-hover-white">ADD MEME</a>
          <a href="/memehub/logout" class="w3-bar-item w3-button w3-padding-large w3-hover-white">LOG OUT</a>
          <% } %> 
        </div>
      </div>
        <title>MEMEHUB</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    </head>
    <script>
      // Used to toggle the menu on small screens when clicking on the menu button
      function navClick() {
        var x = document.getElementById("navDemo");
        if (x.className.indexOf("w3-show") == -1) {
          x.className += " w3-show";
        } else { 
          x.className = x.className.replace(" w3-show", "");
        }
      }
    </script>
</html>