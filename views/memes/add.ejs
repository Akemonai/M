<%- include("../partials/header") %>
<div class="container jumbotron" style="width:35%;margin:25px auto;">
    <h3 style="text-align: center;">Add new MEME</h3>
    <form action="/memehub/meme" method="POST">
        <div class="form-group">
            <label for=",memeName">Meme name</label>
            <input type="text" class="form-control" name="name" placeholder="Name of meme" required>
        </div>
        <div class="form-group">
            <label for="memeURL">Image URL</label>
            <input type="text" class="form-control" name="image" placeholder="URL of image" required>
        </div>
        <div class="form-group">
            <label for="memeDesc">Description</label>
            <input type="text" class="form-control" name="desc" placeholder="Meme description">
        </div>        
        <center><button>Add</button></center>
  </form>
</div>
